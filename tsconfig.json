{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": ["node"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@typings/*": ["src/typings/*"],
      "@arc-types/*": ["arc-types/*"],
      "@test/*": ["test/*"],
      "@deployments/*": ["deployments/*"]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ]
  },
  "include": [
    "src/**/*",
    "arc-types/**/*",
    "deployments/**/*",
    "tasks/**/*",
    "arc-types/augmentations.d.ts",
    "hardhat.config.ts"
  ],
  "exclude": ["node_modules"]
}
