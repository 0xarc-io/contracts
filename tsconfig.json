{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@typings/*": [
        "src/typings/*"
      ],
      "@arc-types/*": [
        "arc-types/*"
      ],
      "@test/*": [
        "test/*"
      ],
      "@deployments/*": [
        "@deployments/*"
      ],
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": [
          "*"
        ]
      }
    ]
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./deployments/**/*",
    "./arc-types/**/*/*",
    "./deployments/rinkeby/*.json",
    "./deployments/mainnet/*.json",
    "./deployments/playnet/*.json"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "arc-types/augmentations.d.ts",
    "hardhat.config.ts"
  ]
}
