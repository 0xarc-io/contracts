{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": ["node"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["test/*"],
      "@utils/*": ["src/utils/*"],
      "@typings/*": ["src/typechain/*"]
    }
  },
  "include": [
    "./src",
    "./scripts",
    "./test",
    "./tasks",
    "./publish/**/*.json"
  ],
  "exclude": ["node_modules"],
  "files": [
    "./index.js",
    "hardhat.config.ts"
  ]
}
