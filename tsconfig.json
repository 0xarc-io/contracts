{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": ["node"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@typings/*": ["src/typings/*"],
      "@arc-types/*": ["arc-types/*"],
      "@test/*": ["test/*"],
      "@deployments/*": ["@deployments/*"],
    }
  },
  "include": [
    "./src/**/*",
    "./scripts/**/*",
    "./tasks/**/*",
    "./test/**/*",
    "./publish/**/*.json",
    "./arc-types/**/*/*", "test_old/contracts/setup.ts", "test_old/contracts/deployers.ts"
  ],
  "exclude": ["node_modules"],
  "files": [
    "./index.js",
    "arc-types/augmentations.d.ts",
    "hardhat.config.ts"
  ]
}
