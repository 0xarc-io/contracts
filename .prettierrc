{
    "printWidth": 100,
    "parser": "typescript",
    "tabWidth": 2,
    "trailingComma": "all",
    "arrowParens": "always",
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "printWidth": 125,
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": false,
          "bracketSpacing": false,
          "explicitTypes": "preserve"
        }
      },
      {
        "files": ["*.js", "*.md"],
        "options": {
          "useTabs": true,
          "printWidth": 100,
          "semi": true,
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "es5"
        }
      },
      {
        "files": "*.json",
        "options": {
          "useTabs": true,
          "singleQuote": false,
          "semi": false,
          "trailingComma": false
        }
      }
    ]
  }
