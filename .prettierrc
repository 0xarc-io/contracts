{
  "printWidth": 80,
  "tabWidth": 2,
  "trailingComma": "all",
  "arrowParens": "always",
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.js", "*.md"],
      "options": {
        "useTabs": true,
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "trailingComma": "es5"
      }
    },
    {
      "files": "*.json",
      "options": {
        "useTabs": true,
        "singleQuote": false,
        "semi": false,
        "trailingComma": false
      }
    }
  ]
}
