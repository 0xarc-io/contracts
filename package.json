{
  "name": "@arcxgame/contracts",
  "version": "0.0.1",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "files": [
    "src",
    "contracts",
    "dist"
  ],
  "author": "Kerman Kohli <kermankohli@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "push-patch": "yarn tsc && npm version patch && npm publish",
    "push-minor": "yarn tsc && npm version minor && npm publish",
    "compile": "yarn buidler compile",
    "start": "node scripts/watcher.js",
    "lint:sol": "solium -d contracts/ --no-soliumignore",
    "clean": "rm -rf src/types && rm -rf src/typings && rm -rf artifacts && rm -rf cache",
    "chain": "ganache-cli --networkId 50 --accounts 20 -l 19000000 -e 10000000000 -m 'concert load couple harbor equip island argue ramp clarify fence smart topic' -h 0.0.0.0",
    "generate-typings": "yarn ts-node ./bindings-generator/main.ts artifacts -o src/typings",
    "build": "yarn compile && yarn generate-typings",
    "coverage": "yarn run build && yarn buidler coverage --temp artifacts --network coverage",
    "test": "yarn jest test --runInBand",
    "deploy": "yarn ts-node deployment/deploy.ts",
    "graph:create": "graph create arcxgame/contracts-v16 --node https://api.thegraph.com/deploy/",
    "graph:create-local": "graph create arcxgame/contracts-v16 --node http://127.0.0.1:8020",
    "graph:codegen": "graph codegen",
    "graph:build": "graph build",
    "graph:deploy": "graph deploy arcxgame/contracts-v16 --access-token ff3f054dd82446549e745475ef50391d --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "graph:deploy-local": "graph deploy arcxgame/contracts-v16 --ipfs http://localhost:5001 --node http://127.0.0.1:8020"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.18.0",
    "@graphprotocol/graph-ts": "^0.18.0",
    "@nomiclabs/buidler": "^1.4.2",
    "@nomiclabs/buidler-ethers": "^1.3.1",
    "@nomiclabs/buidler-etherscan": "^1.3.1",
    "@typechain/ethers-v4": "^1.0.0",
    "@typechain/truffle-v4": "^2.0.2",
    "@typechain/truffle-v5": "^2.0.2",
    "@typechain/web3-v1": "^1.0.0",
    "@types/chai": "^4.2.8",
    "@types/jest": "^25.2.1",
    "@types/mocha": "^8.0.0",
    "@types/node": "^13.7.0",
    "buidler-spdx-license-identifier": "^1.0.2",
    "buidler-typechain": "^0.1.1",
    "chai": "^4.2.0",
    "chokidar": "^3.4.0",
    "commander": "^5.1.0",
    "dotenv": "^8.2.0",
    "ethlint": "^1.2.4",
    "fs-extra": "^9.0.1",
    "jest": "^26.4.0",
    "jest-cli": "^26.0.1",
    "node-run-cmd": "^1.0.1",
    "prettier": "^2.0.5",
    "solc": "^0.7.0",
    "system-commands": "^1.1.7",
    "ts-generator": "0.0.8",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-jest": "^0.0.1",
    "typechain": "^2.0.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^2.5.0",
    "@openzeppelin/upgrades": "^2.8.0",
    "ethers": "^4.0.27"
  }
}
